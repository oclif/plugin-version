{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "Node16",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./lib",
    "pretty": true,
    "rootDirs": ["./src"],
    "strict": true,
    "target": "ES2022",
    "moduleResolution": "Node16"
  },
  "include": ["./src/**/*"],
  "ts-node": {
    "esm": true
  }
}
